<script>
  // Helper: clean topic string
  function cleanTopic(text) {
    return text.trim();
  }

  // üé• VIDEO IDEAS
  function generateIdeas() {
    const input = document.getElementById("ideaTopic");
    const topic = cleanTopic(input.value);
    const container = document.getElementById("ideaResults");

    if (!topic) {
      alert("Please enter a topic for ideas.");
      return;
    }

    const ideas = [
      `I tried ${topic} for 30 days ‚Äì here‚Äôs what happened`,
      `The dark side of ${topic} nobody shows you`,
      `I spent ‚Çπ0 to start with ${topic} ‚Äì full breakdown`,
      `24 hours doing ONLY ${topic} (challenge)`,
      `Beginner vs Pro in ${topic} ‚Äì side by side`,
      `${topic} myths you still believe (and the truth)`,
      `I copied viral ${topic} videos for a week ‚Äì results`,
      `If you‚Äôre into ${topic}, you need to see this`,
      `POV: You finally start ${topic} seriously`,
      `How ${topic} completely changed my life`
    ];

    container.innerHTML = ideas
      .map(
        (idea, i) =>
          `<div class="idea-box"><b>Idea ${i + 1}:</b> ${idea}</div>`
      )
      .join("");
  }

  // #Ô∏è‚É£ HASHTAGS
  function generateHashtags() {
    const raw = document.getElementById("hashtagTopic").value;
    const platform = document.getElementById("platform").value;
    const container = document.getElementById("hashtagResults");

    const topic = cleanTopic(raw);
    if (!topic) {
      alert("Please enter a topic for hashtags.");
      return;
    }

    // base keywords
    const base = topic
      .toLowerCase()
      .replace(/[^\w\s]/g, "")
      .split(/\s+/)
      .filter(Boolean);

    const joined = base.join("");
    const mainTag = "#" + joined;
    const spacedTag = "#" + base.join("_");

    const generic = [
      mainTag,
      spacedTag,
      "#" + joined + "vibes",
      "#" + joined + "daily",
      "#viral",
      "#trending",
      "#explore",
      "#explorepage"
    ];

    let platformTags = [];
    if (platform === "reels") {
      platformTags = ["#reels", "#reelsinstagram", "#reelitfeelit", "#reelsindia", "#reelsvideo", "#reelsdaily"];
    } else if (platform === "shorts") {
      platformTags = ["#shorts", "#youtubeshorts", "#shortsvideo", "#shortsindia"];
    } else if (platform === "tiktok") {
      platformTags = ["#tiktok", "#fyp", "#foryou", "#tiktokindia", "#tiktoktrend"];
    } else {
      platformTags = ["#contentcreator", "#creator", "#videocreator"];
    }

    const niche = base.map((word) => "#" + word);

    const all = [...new Set([...generic, ...platformTags, ...niche])].slice(
      0,
      24
    );

    container.innerHTML =
      `<div class="pill">${all.join("  ")}</div>` +
      `<div class="muted">Tap and hold to select & copy.</div>`;
  }

  // ‚úçÔ∏è CAPTIONS
  function generateCaptions() {
    const raw = document.getElementById("captionTopic").value;
    const topic = cleanTopic(raw);
    const container = document.getElementById("captionResults");

    if (!topic) {
      alert("Please describe your video for captions.");
      return;
    }

    const caps = [
      `POV: ${topic} üëÄ`,
      `I can‚Äôt be the only one who does this‚Ä¶ ${topic}`,
      `${topic} ‚Äì save this so you don‚Äôt forget üîñ`,
      `If this lands on your feed, take it as a sign to try ${topic}.`,
      `${topic} | rate this out of 10 in the comments ‚¨áÔ∏è`,
      `Watch till the end‚Ä¶ it gets crazy üò≥ (${topic})`,
      `Low budget, high effort. ${topic}`,
      `Doing ${topic} so you don‚Äôt have to üòÖ`,
      `One day this will blow up. For now it‚Äôs just us and ${topic}.`,
      `Drop a üî• if you want part 2 of ${topic}.`
    ];

    container.innerHTML = caps
      .map((c) => `<div class="idea-box">${c}</div>`)
      .join("");
  }
</script>

